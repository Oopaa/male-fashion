//  filter product according to the information provide by
$('#filter').click(function(){
    console.log("clicked"); 
    const selectedfields = $('input[type="checkbox"]:checked').map(function() {
  return $(this).attr('name');
  }).get();
    console.log(selectedfields);
  var data = {
    search : selectedfields
  }

  $.ajax({
    url: '/filterproduct',
    method:"post",
    data:data,

    success:function(response){
   if(response.message == "ok"){

    updateProductList(response.product);
    $('.sidebar-toggler').removeClass('active')
    $('.sidebar-filter-active').removeClass('sidebar-filter-active')
   
   }
    }
  })
   
})

function updateProductList(products) {
  // Clear the existing product list
  $('#productList').empty();

  if (products.length > 0) {
    // Loop through the products and append them to the product list
    products.forEach(function(product) {
      var html = `
       
        <div class="col-6 col-md-4 col-lg-4 col-xl-3">
        <div class="product">
          <figure class="product-media">
            <!-- Product image -->
            <a href="/viewproduct?id=${product.slug}">
              <img src="upload/${product.productImage[0]}" alt="Product image" class="product-image">
              <img src="upload/${product.productImage[1]}" alt="Product image" class="product-image-hover">
            </a>
            <!-- Product actions -->
            <div class="product-action-vertical">
              <a href="#" data-whishlist="${product.id}" class="addtowhishlist btn-product-icon btn-wishlist btn-expandable">
                <span>Add to Wishlist</span>
              </a>
            </div>
            <div class="product-action action-icon-top">
              <a href="#" role="button" data-proid="${product.id}" class="addtocartbutton btn-product btn-cart">
                <span>Add to Cart</span>
              </a>
            </div>
          </figure>
          <div class="product-body">
            <!-- Product category -->
            <div class="product-cat">
              <a href="#">${product.category_id.categoryName}</a>
            </div>
            <!-- Product title -->
            <h3 class="product-title">
              <a href="product.html">${product.productName}</a>
            </h3>
            <!-- Product price -->
            <div class="product-price">
              Rs. ${product.price}
            </div>
          </div>
        </div>
        </div>
      `;
      
      // Append the product HTML to the product list container
      $('#productList').append(html);

    });
  } else {
    // Show a message indicating no products found
    $('#productList').html('<p>No products found.</p>');
  }


}

</script>
